<div class="col-12 col-md-6 mb-2 bg-dark text-light p-3 flex-column">
    <h3 class="portfolio-item-title text-light">{{post.title}}</h3>
    <h5 class="portfolio-languages">{{post.body}}</h5>
    <p>posted by {{user.username}} on {{format_date post.created_at}}</p>
    <a class="text-light" href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
</div>

{{#if loggedIn}}
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">Add Comment</button>
    </div>
</form>
{{/if}}

{{> comments post.comments}}


{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}