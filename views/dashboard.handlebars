<section class="col-12 mb-2 bg-dark text-light p-3">
    <h2 class="text-light">Create New Posts</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title:</label>
            <input type="text" id="post-title" name="post-title" class="form-input portfolio-languages text-dark" />
    
        </div>
        <div>
            <label for="post-body">Content:</label>
            <br>
            <textarea type="text" id="post-body" name="post-body" class="form-input text-dark"></textarea>
        </div>

        <button type="submit" class="btn">Create</button>
    </form>
</section>

{{#if post.length}}
<section>
    <h2>Your posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> homepage posts}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}


<script src="/javascript/add-post.js"></script>